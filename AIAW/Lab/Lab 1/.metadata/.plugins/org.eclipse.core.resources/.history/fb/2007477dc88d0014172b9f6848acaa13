package eightPuzzle;

import java.util.Arrays;

public class Board {
	private int N_;
	private int[] board_;
	
	private int getIndex(int i, int j) {return i * N_ + j; };
	
	private int[] arrayFlatten(byte[][] board) {
		int k = 0;
		int[] b = new int[board.length * board[0].length];
		
		for (int[] row: board) {
			for (int elem: row) {
				b[k++] = elem;
			}
		}
	
		return b;
	}
	
	private int[][] toMatrix() {
		int[][] board = new byte[N_][N_];
		
		for (int i = 0; i < N_; ++i) {
			for (int j = 0; j < N_; ++j) {
				board[i][j] = board_[getIndex(i, j)];
			}
		}
		
		return board;
	}
	
	public Board(int N, int[][])
	
	

}
