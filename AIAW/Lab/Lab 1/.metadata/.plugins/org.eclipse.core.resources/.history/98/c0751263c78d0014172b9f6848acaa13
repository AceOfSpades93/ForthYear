package eightPuzzle;

import java.util.Arrays;

public class Board {
	private byte[] board_;
	
	private byte[][] copyOfBoard(byte[][] board) {
		byte[][] b;
		if (null == board || 8 != board.length) {
			throw new IllegalArgumentException();
		}
		
		b = new byte[8][];
		for (int i = 0; i < b.length; ++i) {
			if (8 != board[i].length) {
				throw new IllegalArgumentException();
			}
			b[i] = Arrays.copyOf(board[i], board[i].length);
		}
		return b;
	}
	
	
	public Board(byte[][] board) {
		board_ = copyOfBoard(board);
	}
	
	public int getSize() {return 8;}
	public byte[][] getBoard() {return copyOfBoard(board_);}
	
	public int manhattanDistance(Board b) {
		return 0;
	}
	
	

}
