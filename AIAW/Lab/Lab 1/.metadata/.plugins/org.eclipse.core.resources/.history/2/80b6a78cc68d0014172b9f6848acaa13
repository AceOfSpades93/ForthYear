package eightPuzzle;

import java.util.Arrays;

public class Board {
	private byte[][] board_;
	
	public Board(byte[][] board) {
		if (null == board || 8 != board.length) {
			throw new IllegalArgumentException();
		}
		
		board_ = new byte[8][8];
		for (int i = 0; i < board_.length; ++i) {
			if (8 != board[i].length) {
				throw new IllegalArgumentException();
			}
			board_[i] = Arrays.copyOf(board[i], board[i].length);
		}
	}

}
